pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'feature/basic-setup', changelog: false, poll: false, url: 'https://github.com/abrahamNtd/poc-docker-cicd.git'
            }
        }
        stage('Unit Test') {
            steps {
                echo 'Unit Test ....'
                dir('code/api') {
                    sh './gradlew clean test'
                }
            }
        }
        stage('Code Analisis') {
            steps {
                echo 'Code Analisis ....'
                dir('code/api') {
                    sh './gradlew sonar'
                }
                
            }
        }
        stage('Build') {
            steps {
                echo 'Building ....'
                dir('code/api') {
                    sh './gradlew build'
                }
                sh './gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying ....'
                dir('code/api') {
                    sh 'Deploying ....'
                }
            }
        }
        stage('Functional Test') {
            steps {
                echo 'Functional Test ....'
            }
        }
    }
}


